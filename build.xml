<project name="Hoborg Commons" default="help" basedir=".">

	<!-- optional environmental settings -->
	<property file="build.properties" />

	<!-- set default values if not already set in build.properties -->
	<property name="dir.base" location="." />
	<property name="dir.static" location="${dir.base}/public/static" />

	<!-- Commands aliases -->
	<property name="cmd.lessc" value="lessc" />
	<property name="cmd.recess" value="recess" />

	<target name="build"
		description="Builds Website."
		depends="build.css.compress, build.js"
	>
	</target>

	<target name="build.css.compress"
		depends="build.css.gfx"
		description="Builds CSS file(s)."
	>
		<echo>Building ${dir.static}/styles/css/main.css</echo>
		<exec executable="${cmd.recess}" output="${dir.static}/styles/css/main.css">
			<arg line="--compress" />
			<arg line="${dir.base}/styles/less/main.less" />
		</exec>
	</target>

	<target name="build.css.compile"
		depends="build.css.gfx"
		description="Builds CSS file(s)."
	>
		<echo>Building ${dir.static}/styles/css/main.css</echo>
		<exec executable="${cmd.recess}" output="${dir.static}/styles/css/main.css">
			<arg line="--compile" />
			<arg line="--strictPropertyOrder" />
			<arg line="--zeroUnits" />
			<arg line="${dir.base}/styles/less/main.less" />
		</exec>
	</target>

	<target name="build.css.gfx"
		description="Copy css images assets"
	>
		<echo level="info">Copying CSS images assets.</echo>
		<copy todir="${dir.static}/styles/gfx">
			<fileset dir="${dir.base}/styles/less/bootstrap-2.2/img">
				<include name="**.png" />
			</fileset>
			<fileset dir="${dir.base}/styles/gfx">
				<include name="**.png" />
				<include name="**.gif" />
			</fileset>
		</copy>
	</target>

	<target name="build.js"
		description="Builds JS file(s)."
	>
		<echo>Building ${dir.base}/public/static/scripts/app.js</echo>
		<concat destfile="${dir.base}/public/static/scripts/app.js">
			<fileset dir="${dir.base}/scripts/">
				<include name="page.js" />
			</fileset>
		</concat>
	</target>

	<!-- Help Message -->
	<target name="help"
		description="Prints this help"
	>
		<exec executable="ant">
			<arg value="-p" />
		</exec>
	</target>
</project>